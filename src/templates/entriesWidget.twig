<div class="pane lightpane meta">
  <div class="data">
    <h4 class="heading">{{ "Elasticsearch" | t('elasticraft') }}</h4>
  </div>
  <div class="data">
    {% if doc %}
      {% if dateIndexed %}
        <h5 class="heading">{{ "Last indexed" | t('elasticraft') }}</h5>
        <div class="value">{{ dateIndexed | datetime('short') }}</div>
      {% else %}
        {{ "Indexed date not found. Check your config." | t('elasticraft') }}
      {% endif %}
    {% else %}
      {{ "Save entry to index it." | t('elasticraft') }}
    {% endif %}
  </div>
</div>
